FROM python:3.11-slim

WORKDIR /app

# Copy the backend app code so db_init.py is definitely present
COPY backend/app/ /app/app/

# If you have python deps needed by db_init.py, install them:
# COPY backend/requirements.txt /app/requirements.txt
# RUN pip install --no-cache-dir -r /app/requirements.txt

CMD ["python", "/app/app/database/db_init.py"]
